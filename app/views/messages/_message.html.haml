.message
  .main-chat__messages__left-box
    .main-chat__messages__left-box__name
      = message.user.name
    .main-chat__messages__left-box__message
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__messages__left-box-under 
    - if message.content.present?
      %p.main-chat__messages__right-box
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present? 

